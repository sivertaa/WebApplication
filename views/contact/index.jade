extends ../layout

block title
  | Contact | CSSoc

block append head
  link(rel='stylesheet', href='/assets/css/contact.min.css', type='text/css')

block content
  section#contact
    h1
      | Contact
    .contact-form
      form(method='post', action='#')
        .user-details
          .user-name
            input(type='text', placeholder='Name')
          .user-email
            input(type='text', placeholder='Email')
        .message
          textarea(name='message', placeholder='Message')
        .actions
          ul
            li
              input(type='submit', class='submit-button' value='Send Message')
            li
              input(type='reset', class='reset-button' value='Clear Form')