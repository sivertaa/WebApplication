extends ../layout

block title
  | Events | CSSoc

block append head
  link(rel='stylesheet', href='/assets/css/events.min.css', type='text/css')

block content
  section#events
    h1
      | Events
    ul
      each event in events
        li(class= event.upcoming ? 'upcoming' : '')
          a.event(href='https://www.facebook.com/#{event.id}')
            img(src= event.img)
            .description
              h2= event.name
              p.location= event.location
              p.date= event.date