extends ../layout

block append head
  link(rel='stylesheet', href='/assets/css/gallery.min.css', type='text/css')

block content
  section#gallery
    h1
      | Gallery
    .albums
      each album, id in albums
        a.album(href='/gallery/#{id}')
          div(style='background-image: url("/assets/images/gallery/#{id}/_.thumbnail.jpg")')
            div
              h2= album.name